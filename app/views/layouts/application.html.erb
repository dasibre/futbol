<!DOCTYPE html>
<html>
<head>
  <title>Futbol</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav-section">
	<div class="w-container">
		<div class="w-row">
			<div class="w-col w-col-4">
				<div class="company"><%= Futbol %></div>
				</div>
				<div class="w-col w-col-8 navigation-column">
				<%= link_to "Home", root_path, class: "nav-link" %>
				<%= link_to "Players", players_path, class: "nav-link" %>
				<%= link_to "Pinboards", pinboards_path, class: "nav-link" %>
				<% if user_signed_in? %>
					<%= link_to "logout", logout_path, class: "nav-link last" %>
				<% else %>
					<%= link_to "login", login_path, class: "nav-link last" %>
					<% end %>

				</div>
		</div>
	</div>
</div>
<div class="alert" >
<% if flash[:alert] %>
	<%= flash[:alert] %>
	<% end %>
	</div>
<% if flash[:notice] %>
	<div class="notice">
	<%= flash[:notice] %>
	</div>
	<% end %>
<%= yield %>
<%#= debug(params) %>

</body>
</html>
